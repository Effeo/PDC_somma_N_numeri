NCPU=2

echo --------------------------
echo 'This job is allocated on '${NCPU}' cpu(s)'
echo 'Job is running on node(s):'
cat $PBS_NODEFILE

PBS_O_WORKDIR=$PBS_O_HOME/EsercizioSommaInteri

echo "Eseguo la compilazione: "
/usr/lib64/openmpi/1.4-gcc/bin/mpicc -o $PBS_O_WORKDIR/job_s1_p2_n100000 $PBS_O_WORKDIR/main.c

echo "Eseguo il codice: "
/usr/lib64/openmpi/1.4-gcc/bin/mpiexec -machinefile $PBS_NODEFILE -np $NCPU $PBS_O_WORKDIR/job_s1_p2_n100000 1 100000  
echo --------------------------